<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <!-- logging for development -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoding>UTF-8</encoding>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d [%t] %-5p %c - %m%n</Pattern>
        </layout>
    </appender>

    <!-- logging for application -->
    <appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoding>UTF-8</encoding>
        <file>log/rposbatch/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/rposbatch/bk/app.%d{yyyyMMdd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
                 <Pattern>[%-5level][%d{yyyy-MM-dd HH:mm:ss}] %class - %msg%n</Pattern>
            <pattern>%d [%t] %-5p %c - %m%n</pattern>
        </layout>
    </appender>

    <logger name="org.springframework" level="info">
        <appender-ref ref="logfile" />
    </logger>
    <logger name="org.hibernate" level="info">
        <appender-ref ref="logfile" />
    </logger>
    <logger name="org.jboss.resteasy" level="info">
        <appender-ref ref="logfile" />
    </logger>
    <logger name="or.jp.kimiyo" level="debug">
        <appender-ref ref="logfile" />
        <appender-ref ref="console" />
    </logger>

<!--
    <root>
        <level value="debug" />
        <appender-ref ref="console"/>
    </root>
-->

</configuration>
